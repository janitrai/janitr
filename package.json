{
  "name": "janitr",
  "version": "0.0.0",
  "private": true,
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "playwright": "^1.58.1",
    "prettier": "^3.8.1"
  },
  "scripts": {
    "prepare": "husky",
    "format": "prettier --write . --ignore-unknown && uvx ruff format .",
    "format:check": "prettier --check . --ignore-unknown && uvx ruff format --check .",
    "simpledoc": "npx @simpledoc/simpledoc",
    "simpledoc:check": "npx @simpledoc/simpledoc check",
    "webapp:dev": "npx wrangler pages dev webapp --port 8788",
    "webapp:deploy": "npx wrangler pages deploy webapp"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,ts,tsx,json,css,md,html,yaml,yml}": "prettier --write --ignore-unknown",
    "*.py": "uvx ruff format"
  }
}
